<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
	<moduleName>Item Cards</moduleName>
	<requiredInstallFiles>
		<folder source="Required" destination="" />
	</requiredInstallFiles>
	<installSteps order="Explicit">
		<installStep name="Item Cards">
			<optionalFileGroups order="Explicit">
				<group name="Main File" type="SelectExactlyOne">
					<plugins order="Explicit">
						<plugin name="Plugin (Recommended)">
							<description>Select if you want Item Cards in plugin form. (ESP)</description>
							<files>
								<folder source="Main Files\Plugin" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Scriptrunner">
							<description>Select if you want Item Cards in scriptrunner form. (ESPless)</description>
							<files>
								<folder source="Main Files\Scriptrunner" destination="" priority="0" />
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
	</installSteps>
</config>